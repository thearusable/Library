<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: {class: 'form-horizontal'}) do |f| %>
<%= render 'layouts/messages' %>

<div class="form-group">
    <%= f.label :Imię_i_nazwisko %>
    <div>
        <%= f.text_field :name, required: true, class: "form-control",autofocus: true %>
    </div>
</div>

<div class="form-group">
    <%= f.label :Email %>
    <div>
        <%= f.email_field :email, required: true, class: "form-control" %>
    </div>
</div>

<div class="form-group">
    <%= f.label :Adres %>
    <div>
        <%= f.text_field :adress, required: true, class: "form-control" %>
    </div>
</div>

<div class="form-group">
    <%= f.label :Telefon%>
    <div>
        <%= f.text_field :phone, required: true, class: "form-control" %>
    </div>
</div>

<div class="form-group">
    <%= f.label :Hasło %>
    <div>
        <%= f.password_field :password, required: true, autocomplete: "off", class: "form-control" %>
    </div>
</div>

<div class="form-group">
    <%= f.label :Potwierdzenie_hasła %>
    <div>
        <%= f.password_field :password_confirmation, required: true, autocomplete: "off", class: "form-control" %>
    </div>
</div>

<div class="form-group">
    <div>
        <%= f.submit "Zarejestruj", class: "btn btn-primary" %>
    </div>
</div>

<% end %>