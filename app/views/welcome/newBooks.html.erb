<%= render 'header' %> 
  <div class="container">
		<h1>Najnowsze pozycje!</h1>
    <div class="table-responsive">
        <table class="newBooks">
        <th></th><th>Tytu≈Ç</th><th>Autor</th><th></th>
        <% if !@books.nil? %>
          <% @books.each do |book| %>
            <tr>
                <td><%= image_tag(book.image(:medium)) %></td>
                <td><%= book.title %></td>
                <td><% book.writers.each do |writer| %>
                <%= writer.name %><% end %></td>
                <td><%= link_to 'Show',{controller: 'books', action: 'show', id: book.id } %></td>
            </tr>
          <% end %>
         <% end %>
        </table>
      </div>
		<%= yield %>
	</div>
<%= render 'footer' %>




