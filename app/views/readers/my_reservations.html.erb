<%= render 'header_2' %> 
		<!--Zawartość podstrony-->
		<div class="pageContent">
			<div class="content">
				<h2 class='myResHeader'>Moje rezerwacje</h2>
				<!--Tabela z rezerwacjami książek-->
				<table class='reservations'>
					<% if !@reservations.nil? %>
					<th>Tytuł</th><th>Autor</th><th>Data utworzenia</th><th>Data aktualizacji</th><th>&nbsp;</th><th>&nbsp;</th>
						<% @reservations.each do |r| %>
						<% reservationID = r.id %>
				      	<tr>
							<% book = Book.find(r.book_id)%>
					        <td><%= book.title%></td>  
					        <td>
					        	<% book.writers.each do |writer| %>
					        	<%= writer.name %>
					        	<% end %> 
					        </td>
					        <td><%= r.created_at %></td>
					        <td><%= r.updated_at %></td>
					        <td><%= link_to 'Show', {controller: 'readers', action: 'showRes', resID: reservationID} %></td>
					        <td><%= link_to 'Destroy', r, method: :delete, data: { confirm: 'Are you sure?' } %></td>
					    </tr>
				    	<% end %>
				    <%else%>
				    	<%= puts "<p>Nie znaleziono książek o podanym tytule!</p>"%>
			    	<% end %>
				</table>
			</div>
		</div>
		<div class="welcome/footer"></div>
	</body>
</html>